<div class="modal fade zoom" id="modal-update">
  <div class="modal-dialog">
    <%= form_for @tutorial, url: admin_tutorial_path(t: @tutorial.id), method: 'put', remote: true, html: { onsubmit: 'return submitForm($(this));' } do |f| %>
    <%= hidden_field_tag :type, 'update' %>
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <%= t('.title') %>
        </h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :link, class: "control-label" %>
          <%= f.text_field :link, class: "form-control" %>
          <span id="help-block-link" class="help-block"></span>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t('save'), class: "btn btn-secondary" %>
        <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-default">
          <%= t('cancel') %>
        </button>
      </div>
    </div><!-- /.modal-content -->
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript">
function submitForm(element){
  element.find(".btn").prop("disabled", true)
  $("body").css("cursor", "progress")
}
</script>