<% provide(:og_title, t('.title')) %>
<% provide(:og_description, Setting.seo_description) %>
<% provide(:keywords, Setting.seo_keywords) %>
<% provide(:meta_image, Setting.featured_image) %>
<%= form_for @administrator, url: admin_administrators_path(), method: 'post' do |f| %>
<div id="page-heading">
  <ol class="breadcrumb">
    <li>
      <%= link_to t('admin.title'), admin_path %>
    </li>
    <li>
      <%= link_to t('admin.administrators.index.title'), admin_administrators_path %>
    </li>
    <li>
      <%= t('.title') %>
    </li>
  </ol>
  <h1>
    <%= t('.title') %>
  </h1>
</div>
<div class="container new-administrator">
  <div class="col-md-8">
    <%= render 'shared/error_messages', object: @administrator %>
    <div class="form-group <%= 'has-error' if @administrator.errors.has_key?(:email) %>">
      <%= f.label :email, class: 'control-label' %>
      <%= f.text_field :email, class: "form-control" %>
      <p class="help-block">
        <% if @administrator.errors.has_key?(:email) %>
        <%= @administrator.errors[:email].join('<br>').html_safe %>
        <% end %>
      </p>
    </div>
    <div class="form-group <%= 'has-error' if @administrator.errors.has_key?(:username) %>">
      <%= f.label :username, class: 'control-label' %>
      <%= f.text_field :username, class: "form-control" %>
      <p class="help-block">
        <% if @administrator.errors.has_key?(:username) %>
        <%= @administrator.errors[:username].join('<br>').html_safe %>
        <% end %>
      </p>
    </div>
    <div class="form-group <%= 'has-error' if @administrator.errors.has_key?(:password) %>">
      <%= f.label :password, class: 'control-label' %>
      <%= f.password_field :password, class: "form-control" %>
      <p class="help-block">
        <% if @administrator.errors.has_key?(:password) %>
        <%= @administrator.errors[:password].join('<br>').html_safe %>
        <% end %>
      </p>
    </div>
    <div class="form-group <%= 'has-error' if @administrator.errors.has_key?(:password_confirmation) %>">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <p class="help-block">
        <% if @administrator.errors.has_key?(:password_confirmation) %>
        <%= @administrator.errors[:password_confirmation].join('<br>').html_safe %>
        <% end %>
      </p>
    </div>
    <div class="form-group <%= 'has-error' if @administrator.errors.has_key?(:fullname) %>">
      <%= f.label :fullname, class: 'control-label' %>
      <%= f.text_field :fullname, class: "form-control" %>
      <p class="help-block">
        <% if @administrator.errors.has_key?(:fullname) %>
        <%= @administrator.errors[:fullname].join('<br>').html_safe %>
        <% end %>
      </p>
    </div>
    <div class="form-group <%= 'has-error' if @administrator.errors.has_key?(:phone) %>">
      <%= f.label :phone, class: 'control-label' %>
      <%= f.text_field :phone, class: "form-control" %>
      <p class="help-block">
        <% if @administrator.errors.has_key?(:phone) %>
        <%= @administrator.errors[:phone].join('<br>').html_safe %>
        <% end %>
      </p>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.submit t('.title'), class: 'btn btn-secondary' %>
        <%= link_to t('cancel'), admin_administrators_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div> <!-- container -->
<% end %>