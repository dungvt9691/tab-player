<% if @error.nil? %>
$("#test-smtp-alert .alert-icon").html("<i class='fa fa-spin fa-spinner'></i>")
$("#test-smtp-alert").addClass("alert-warning")
$("#test-smtp-alert").removeClass("alert-danger alert-success")
$("#test-smtp-alert .alert-text").html("<%= t('.loading') %>")
$("#test-smtp-alert").fadeIn(100)
$.ajax({
  type: "POST",
  url: "<%= admin_test_smtp_path %>",
  data: { email: "<%= @email %>" }
})
<% else %>
$('body').css("cursor", 'auto')
$(".tab-content .btn").prop("disabled", false)
$("#test-smtp-alert .alert-icon").html("<i class='fa fa-warning'></i>")
$("#test-smtp-alert").addClass("alert-danger")
$("#test-smtp-alert").removeClass("alert-warning alert-success")
$("#test-smtp-alert .alert-text").html("<%= @error %>")
$("#test-smtp-alert").fadeIn(100)
<% end %>