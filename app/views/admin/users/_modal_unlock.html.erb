<div class="modal fade zoom modal-confirm" id="modal-unlock">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_for user, url: admin_user_path(id: user.id), method: 'put', remote: true, html: { onsubmit: 'return submitForm($(this));' } do |f| %>
        <%= hidden_field_tag :type, 'unlock' %>
        <center>
          <h1>
            <i class="text-secondary fa fa-unlock"></i>
          </h1>
          <%= f.hidden_field :locked_at, value: nil, class: 'form-control' %>
          <%= f.submit t('.unlock'), class: "btn btn-secondary", id: "btn-confirm" %>
          <button id="btn-cancel" type="button" data-dismiss="modal" aria-label="Close" class="btn btn-default">
            <%= t('cancel') %>
          </button>
        </center>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript">
function submitForm(element){
  element.find(".btn").prop("disabled", true)
  $("body").css("cursor", "progress")
}
</script>