<% provide(:og_title, t('.title')) %>
<% provide(:og_description, Setting.seo_description) %>
<% provide(:keywords, Setting.seo_keywords) %>
<% provide(:meta_image, Setting.featured_image) %>
<%= form_for(resource, as: resource_name, url: admin_password_path) do |f| %>
<div class="panel-body">
  <h3 class="panel-title text-center">
    <%= t('.title') %>
  </h3>
  <%= devise_error_messages! %>
  <% flash.each do |key, value| %>
  <% if value %>
  <div class="alert alert-<%= render_key(key) %>">
    <ul>
      <li><%= value.html_safe %></li>
    </ul>
  </div>
  <br>
  <% end %>
  <% end %>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
          <%= f.email_field :email, autofocus: true, placeholder: t('.form.email'), class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="panel-footer">
  <%= link_to t('.form.signin'), new_admin_session_path, class: 'pull-left btn btn-link' %>
  <div class="pull-right">
    <%= f.submit t('.form.submit'), class: 'btn btn-secondary' %>
  </div>
</div>
<% end %>